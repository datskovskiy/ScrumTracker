@model WebSite.Models.Issue.DeleteIssueModel
@{
    ViewBag.Title = "_DeleteIssueModelPartial";
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">&times;</button>
        <h4>@Resources.Resource.DeleteConfirm</h4>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id, new { @class = "issueIdForDelete" })
        <div class="row">
            <div class="col-md-6 text-center">
                <button id="btnConfirmDeleteIssue" class="btn btn-primary">OK</button>
                @Html.Hidden("deleteIssue", Url.Action("DeleteIssue"))
            </div>
            <div class="col-md-6 text-center">
                <button class="btn btn-primary" data-dismiss="modal" area-hidden="true">@Resources.Resource.Cancel</button>
            </div>
        </div>
    </div>
</div>

