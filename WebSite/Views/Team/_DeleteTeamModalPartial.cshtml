@model WebSite.Models.Team.DeleteTeamModel
@{
    ViewBag.Title = "_DeleteTeamModalPartial";
}


<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">&times;</button>
        <h4>@Resources.Resource.DeleteConfirm</h4>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id, new { @class = "teamIdForDelete" })
        <div class="row">
            <div class="col-md-6 text-center">
                <button id="btnConfirmDeleteTeam" class="btn btn-primary">OK</button>
                @Html.Hidden("deleteTeam", Url.Action("DeleteTeam"))
            </div>
            <div class="col-md-6 text-center">
                <button class="btn btn-primary" data-dismiss="modal" area-hidden="true">@Resources.Resource.Cancel</button>
            </div>
        </div>
    </div>
</div>