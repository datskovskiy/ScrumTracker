@using Microsoft.AspNet.Identity
@using Resources
@if (Request.IsAuthenticated)
{
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download" style="width: 203.23px;">@User.Identity.GetUserName()<span class="caret"></span></a>
                <ul class="dropdown-menu" style="width: 203.23px;">
                    <li>@Html.ActionLink(Resource.ProfileTitle, "ProfileUser", "Manage")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink(Resource.ManageUsers, "ManageUsers", "Manage")</li>
                    }
                    <li class="divider"></li>
                    <li>@Html.ActionLink(Resource.LogOff,"LogOff","Account")</li>
                </ul>
            </li>
        </ul>    
}
       